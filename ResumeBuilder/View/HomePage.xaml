<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ResumeBuilder.View.HomePage">
    <StackLayout Opacity="1">
    <Grid>
        <Image Aspect="AspectFill">
                <Image.Source>
                    <OnPlatform x:TypeArguments="FileImageSource">
                        <OnPlatform.Android>backgroundImage2.jpg</OnPlatform.Android>
                        <OnPlatform.iOS>backgroundImage1.jpg</OnPlatform.iOS>
                    </OnPlatform>
                    
                </Image.Source>
            </Image>
    <StackLayout>
    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>   
        <Button Grid.Column="0" Grid.Row="1" Text="My Resumes" BackgroundColor="Black" TextColor="White" HeightRequest="80" Margin="5, 0, 0, 0"/>
        <Button Grid.Column="1" Grid.Row="1" Text="Create Resume" BackgroundColor="Black" TextColor="White" HeightRequest="80" Margin="0, 0, 5, 0"/>
    </Grid>
    </StackLayout>
    </Grid>
  </StackLayout>
</ContentPage>